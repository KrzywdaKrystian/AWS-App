extends layout

block content
  div(ng-controller="GalleryController")
    h1= title
    include menu.jade
    p= desc
    img(src="/images/gears.gif", ng-show="inProgress")
    p(ng-show="!inProgress && gallery.length == 0") Gallery is empty
    ul(ng-show="!inProgress", class="gallery")
      li(ng-repeat="photo in gallery")
        div(class="photo-container")
          div(class="loading")
            img(src="/images/gears.gif")
          img(ng-src="{{ photo.src }}", class="photo")
          button(ng-click="deletePhoto($index)") Delete Image
          button(class="grey") Rotate Image
